@{
    ViewData["Title"] = "Home Page";

}

<div class="text-center">
    <h1 class="display-4">Wizzify</h1>
    <form method="get">
        <fieldset>
            <legend>Search Song</legend>
            <div>
                <label for="songName">Song Name:</label>
                <input type="text" name="songName" value="" />
            </div>
            <div>
                <label>&nbsp;</label>
                <input type="submit" value="Submit" class="submit" />
            </div>
        </fieldset>
    </form>
    <div>
        @ViewData["errMsg"]
        @ViewData["songName"]
        @ViewData["songs"]
    </div>
</div>
